{
  "name": "voxel-world-client",
  "version": "0.1.0",
  "description": "Electron + Three.js desktop client for the voxel world.",
  "main": "dist/main/index.js",
  "author": "Voxel World",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:preload": "tsc -p tsconfig.preload.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "wait-on dist/main/index.js dist/preload/index.js http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-builder",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "three": "^0.159.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/three": "^0.159.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^35.7.5",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.voxelworld.client",
    "productName": "VoxelWorldClient",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "dist/shared/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main/index.js"
    },
    "mac": {
      "target": ["dmg"],
      "identity": null
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Game"
    }
  }
}
